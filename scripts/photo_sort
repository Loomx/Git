#!/bin/sh
#
# /usr/local/bin/photo_sort
#
# Sort photos into ~/Pictures/YYYY/MM/

for i in *.jpg; do
		Name=$(basename "$i")
		Year="${Name:0:4}"
		Month="${Name:4:2}"
		case $Year in
			20[0-9][0-9])           ;;
			*)             continue ;;
		esac	
		case $Month in
			[0-1][0-9])             ;;
			*)             continue ;;
		esac	
		mkdir -p ~/Pictures/$Year/$Month
		mv -nv "$i" ~/Pictures/$Year/$Month/ 2>/dev/null
done
